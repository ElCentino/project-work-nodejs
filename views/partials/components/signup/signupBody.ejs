
<body>
    <div id="login-box">
      <div class="left">
        <h1>CE Ghana</h1>
        <p id="stuff"></p>
  
        <% if(typeof status !== 'undefined') { %>
          <p class="<%= status %>">
            <%= message %>
          </p>
          <% } %>
  
            <h3>Sign up</h3>
            <form action="/account/signup" method="POST">
              <input type="text" name="fullname" placeholder="Full Name *" id="full_name" required/>
              <input type="text" name="username" placeholder="Username *" id="user_name" required/>
              <input type="text" name="email" placeholder="E-mail *" id="email" required/>
              <input type="password" name="password" placeholder="Password *" id="password" required/>
              <input type="password" name="password2" placeholder="Retype password *" id="retype_password" required/>
  
              <input type="submit" name="signup_submit" value="Sign me up" id="signup" />
            </form>
      </div>
  
      <div class="right">
        <span class="loginwith">Sign in with
          <br />social network</span>
  
        <button class="social-signin facebook">Log in with facebook</button>
        <button class="social-signin twitter">Log in with Twitter</button>
        <button class="social-signin google">Log in with Google+</button>
      </div>
      <div class="or">OR</div>
    </div>
  
  <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <link rel="stylesheet" type="text/css" media="screen" href="/css/signup.css">
  </body>
  